<?xml version="1.0" encoding="UTF-8"?>
<!-- Local log4j2 properties file -->
<Configuration monitorInterval="30" status="WARN">
	<Appenders>
		<Console follow="true" name="ConsoleAppender" target="SYSTEM_OUT">
			<PatternLayout pattern="${LOG_PATTERN}"/>
		</Console>
		<!-- Rolling File Appender -->
		<RollingFile fileName="/logs/tomcat/parking/app_parking.log" filePattern="/logs/tomcat/parking/app_parking.log-%d{yyyy-MM-dd}.log"
				name="FileAppender">
			<PatternLayout>
				<Pattern>${LOG_PATTERN}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger additivity="false" level="debug" name="com.gartner">
			<AppenderRef ref="ConsoleAppender"/>
			<AppenderRef ref="FileAppender"/>
		</Logger>
		<Logger additivity="false" level="error" name="org.hibernate">
			<AppenderRef ref="ConsoleAppender"/>
			<AppenderRef ref="FileAppender"/>
		</Logger>
		<Logger additivity="false" level="error" name="net.sourceforge">
			<AppenderRef ref="ConsoleAppender"/>
			<AppenderRef ref="FileAppender"/>
		</Logger>
		<Logger additivity="false" level="error" name="httpclient.wire">
			<AppenderRef ref="ConsoleAppender"/>
			<AppenderRef ref="FileAppender"/>
		</Logger>
		<Logger additivity="false" level="error" name="httpclient.wire.content">
			<AppenderRef ref="ConsoleAppender"/>
			<AppenderRef ref="FileAppender"/>
		</Logger>
		<Logger additivity="false" level="error" name="org.apache">
			<AppenderRef ref="ConsoleAppender"/>
			<AppenderRef ref="FileAppender"/>
		</Logger>
		<Logger additivity="false" level="error" name="org.springframework">
			<AppenderRef ref="ConsoleAppender"/>
			<AppenderRef ref="FileAppender"/>
		</Logger>

		<Root level="info">
			<AppenderRef ref="ConsoleAppender"/>
			<AppenderRef ref="FileAppender"/>
		</Root>
	</Loggers>
	<Properties>
		<Property name="LOG_PATTERN">
			%d thread=%t level=%-5p category=%c method=%M context=%x message=%m%n
		</Property>
	</Properties>
</Configuration>
